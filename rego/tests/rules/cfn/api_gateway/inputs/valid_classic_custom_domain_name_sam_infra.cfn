AWSTemplateFormatVersion: "2010-09-09"
Transform: AWS::Serverless-2016-10-31
Description: Valid classic custom domain name configuration
Resources:
  ServerlessAPI:
    Type: AWS::Serverless::Api
    Properties:
      StageName: Prod
      Domain:
        DomainName: api.example.com
        SecurityPolicy: TLS_1_2
        CertificateArn: >-
          arn:aws:acm:us-east-1:111122223333:certificate/9bb7fd90-00cf-4326-ae14-7dc62c92dfe5
  # This one should be ignored by the rule because it doesn't specify a Domain
  ServerlessAPI2:
    Type: AWS::Serverless::Api
    Properties:
      StageName: Prod
